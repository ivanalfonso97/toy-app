<div class="d-flex flex-row align-items-center w-50 my-4 gx-4">
    <%= image_tag toy.image, class: "w-25" if toy.image.attached? %>
    <div class="d-flex flex-column ps-4">
        <div class="d-flex justify-content-between align-items-center">
            <h3><%= toy.toy_name %></h3>
            <% if current_page?(dashboard_path) %>
                <%= link_to "Edit Toy", edit_toy_path(toy) %>
            <% end %>
        </div>
        <p class="fw-light fst-italic"><%= toy.category %></p>
        <%= toy.description %>
        <p class="fw-light mt-4">Added by: <span class="fw-semibold"><%= toy.user.name %></span></p>
    </div>
</div>