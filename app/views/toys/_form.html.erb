<%= form_with model: toy do |form| %>
    <div class="row align-items-center mb-3">
        <%= render "shared/form_error", form: form %>
    </div>
    <div class="row align-items-center mb-3">
        <div class="col-2 offset-3">
            <%= form.label :toy_name %>
        </div>
        <div class="col-4 pe-0">
            <%= form.text_field :toy_name, class: "form-control", placeholder: "Monopoly" %>
        </div>
        <div class="col-3 ps-4">
            <span class="form-text"></span>
        </div>
    </div>
    <div class="row align-items-center mb-3">
        <div class="col-2 offset-3">
            <%= form.label :category %>
        </div>
        <div class="col-4 pe-0">
            <%= form.text_field :category, class: "form-control", placeholder: "Board games" %>
        </div>
    </div>
    <div class="row align-items-center mb-3">
        <div class="col-2 offset-3">
            <%= form.label :description %>
        </div>
        <div class="col-4 pe-0">
            <%= form.text_area :description, class: "form-control", placeholder: "About your toy..." %>
        </div>
    </div>
    <div class="row align-items-center mb-3">
        <div class="col-2 offset-3">
            <%= form.label :image %>
        </div>
        <div class="col-4 pe-0">
            <%= form.file_field :image, class: "form-control" %>
        </div>
    </div>
    <div class="row mt-4 justify-content-end">
        <%= form.submit "List", class: "col-2 btn btn-primary" %>
        <div class="col-3"></div>
    </div>
<% end %>